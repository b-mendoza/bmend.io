{
  "name": "intro-to-nextjs__remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "clean:hard": "rimraf --verbose build node_modules pnpm-lock.yaml public/build tsconfig.tsbuildinfo",
    "clean:soft": "rimraf --verbose build node_modules/.cache public/build tsconfig.tsbuildinfo",
    "dev": "remix dev --manual",
    "fix": "concurrently --kill-others-on-fail --prefix-colors \"auto\" \"pnpm:fix:*\"",
    "fix:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "fix:prettier": "prettier --ignore-unknown --cache --write .",
    "lint": "concurrently --prefix-colors \"auto\" \"pnpm:lint:*\"",
    "lint:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:prettier": "prettier --ignore-unknown --cache --check .",
    "lint:types": "tsc --pretty",
    "start": "remix-serve ./build/index.js"
  },
  "dependencies": {
    "@heroicons/react": "2.0.18",
    "@remix-run/css-bundle": "2.4.0",
    "@remix-run/node": "2.4.0",
    "@remix-run/react": "2.4.0",
    "@remix-run/serve": "2.4.0",
    "@unpic/react": "0.1.5",
    "@vercel/remix": "2.4.0",
    "clsx": "2.0.0",
    "embla-carousel-react": "8.0.0-rc15",
    "isbot": "3.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "2.1.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@remix-run/dev": "2.4.0",
    "@types/node": "20.10.4",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "42.0.0",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-n": "16.4.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "postcss": "8.4.32",
    "prettier": "3.1.1",
    "prettier-plugin-packagejson": "2.4.7",
    "prettier-plugin-tailwindcss": "0.5.9",
    "rimraf": "5.0.5",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
