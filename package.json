{
  "name": "bmendoza.io",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "clean:hard": "rimraf --verbose build node_modules pnpm-lock.yaml public/build tsconfig.tsbuildinfo",
    "clean:soft": "rimraf --verbose build node_modules/.cache public/build tsconfig.tsbuildinfo",
    "dev": "remix dev --manual",
    "fix": "concurrently --kill-others-on-fail --prefix-colors \"auto\" \"pnpm:fix:*\"",
    "fix:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "fix:prettier": "prettier --ignore-unknown --cache --write .",
    "lint": "concurrently --prefix-colors \"auto\" \"pnpm:lint:*\"",
    "lint:eslint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:prettier": "prettier --ignore-unknown --cache --check .",
    "lint:types": "tsc --pretty",
    "prepare": "husky install",
    "start": "remix-serve ./build/index.js"
  },
  "dependencies": {
    "@radix-ui/react-toggle": "1.0.3",
    "@remix-run/node": "2.4.1",
    "@remix-run/react": "2.4.1",
    "@remix-run/serve": "2.4.1",
    "@unpic/react": "0.1.5",
    "@vercel/remix": "2.4.1",
    "clsx": "2.0.0",
    "dayjs": "1.11.10",
    "embla-carousel-react": "8.0.0-rc17",
    "isbot": "4.1.0",
    "react": "canary",
    "react-dom": "canary",
    "tailwind-merge": "2.2.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@remix-run/dev": "2.4.1",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "cssnano": "6.0.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-deprecation": "2.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-n": "16.5.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "postcss": "8.4.32",
    "prettier": "3.1.1",
    "prettier-plugin-packagejson": "2.4.7",
    "prettier-plugin-tailwindcss": "0.5.9",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "volta": {
    "node": "20.10.0",
    "pnpm": "8.12.1"
  }
}
